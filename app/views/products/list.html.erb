<div class="container">
  <div class="text-center">
    <h2>Bienvenides</h2>
  </div>
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-sm-3 list-card">
      <div class="card text-center text-secondary">
        <%= image_tag product.photo %>
        <div class="card-body">
          <h4><%= "$#{product.price}" %></h4>
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description %></p>
          <a href="#" class="btn btn-success text-white btn-lg">Comprar</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <br>
  </div>
</div>
