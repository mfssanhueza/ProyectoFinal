<p id="notice"><%= notice %></p>

<h1>Products</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Photo</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">   </th>

    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <th scope="row"><%= product.name %></th>
        <td><%= image_tag product.photo %></td>
        <td><%= product.description %></td>
        <td><%= "$#{product.price}" %></td>
        <td><%= link_to 'Show', product, :class => "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-outline-success" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, :class => "btn btn-outline-warning" %>
